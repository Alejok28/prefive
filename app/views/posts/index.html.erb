<div class="post-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 search">
        <h2>Buscar</h2>
        <%= form_tag posts_path, method: :get do %>
          <div class="form-group">
            <%= text_field_tag :subject, params[:subject], class: "form-control", placeholder: "Materia" %>
          </div>
          <div class="form-group">
            <%= text_field_tag :teacher, params[:teacher], class: "form-control", placeholder: "Profesor" %>
          </div>
          <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
        <% end %>

      </div>
      <div class="col-sm-9 latest-posts">
        <h2>Últimas publicaciones</h2>

        <table class="table">
          <thead>
            <tr>
              <th>Materia</th>
              <th>Profesor</th>
              <th>Calificación</th>
              <th>Descripción</th>
              <th>Acciones</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.subject %></td>
                <td><%= post.teacher %></td>
                <td><%= post.score %></td>
                <td><%= post.description.truncate(50) %></td>
                <td><%= link_to 'Ver', post %></td>
                <%if user_signed_in? && current_user == post.user %>
                  <td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_post_path(post) %></td>
                  <td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="text-right">
          <%= link_to 'Compartir', new_post_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
