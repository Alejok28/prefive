<div class="post-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
            <h2>Ãšltimas publicaciones</h2>
            <table class="table">
              <thead>
                <tr>

                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.subject %></td>
                    <td><%= post.teacher %></td>
                    <td><%= post.score %></td>
                    <td><%= post.description %></td>
                    <td><%= link_to 'Ver', post %></td>
                    <%if user_signed_in? && current_user == post.user %>
                      <td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_post_path(post) %></td>
                      <td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'Compartir', new_post_path, class: "btn btn-primary" %>

      </div>
    </div>
  </div>
</div>
